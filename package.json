{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.26.5",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.32.3",
    "@spotify/prettier-config": "^12.0.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "react": "^18.0.0",
    "react-dom": "18.0.0",
    "typescript": "~5.3.0"
  },
  "resolutions": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@testing-library/react": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "better-sqlite3": "^8.0.0",
    "form-data@~2.3.2": "^2.5.5",
    "jsonpath-plus": "10.3.0",
    "@backstage/plugin-auth-backend": "^0.25.0",
    "@backstage/backend-common": "^0.25.0",
    "@backstage/plugin-proxy-backend": "^0.6.0",
    "@backstage/backend-defaults": "^0.8.0",
    "@backstage/plugin-auth-backend-module-github-provider": "^0.2.0",
    "@backstage/plugin-permission-backend-module-allow-all-policy": "^0.2.0",
    "@backstage/plugin-catalog-backend-module-scaffolder-entity-model": "^0.2.0"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.1",
  "dependencies": {
    "@testing-library/react": "^16.3.0"
  }
}
